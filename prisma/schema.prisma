generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CategoryType {
  TOP
  BOTTOM
  OUTER
  DRESS
  SHOES
  BAG
  ACCESSORY
}

model Style {
  id            Int        @id @default(autoincrement())
  thumbnail     String?
  nickname      String
  title         String
  content       String
  password      String
  viewCount     Int?
  curationCount Int?
  categories    Category[]
  curations     Curation[]
  tags          String[]
  imageUrls     String[]
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

model Category {
  id        Int          @id @default(autoincrement())
  type      CategoryType
  name      String
  brand     String
  price     Float
  style     Style        @relation(fields: [styleId], references: [id], onDelete: Cascade)
  styleId   Int
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

model Curation {
  id                Int      @id @default(autoincrement())
  nickname          String
  content           String
  password          String
  trendy            Int
  personality       Int
  practicality      Int
  costEffectiveness Int
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  style             Style    @relation(fields: [stylesId], references: [id], onDelete: Cascade)
  stylesId          Int
  comment           Comment?
}

model Comment {
  id         Int      @id @default(autoincrement())
  content    String
  password   String //style참조 ->password와 nickname req바디에 줘야
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  curations  Curation @relation(fields: [curationId], references: [id], onDelete: Cascade)
  curationId Int      @unique
}
